@using Entities.Concrete
@using Newtonsoft.Json
@model Entities.DTOs.DoctorDTOs.DoctorGetDto
@{
    int n = 1;
}

<div>
    <div>
        <h1>Detail:</h1>
    </div>
    <div>
        <div>

            <div class="col-md-12 mt-3">
                <h4>Doctor:</h4>
            </div>

            <div class="row ml-1 align-items-center">
                <div class="mb-3 col-md-4 align-items-center">
                    <h5>Doctor image: </h5>
                    <br />
                    <img style="width: 350px" src="~/uploads/doctors/@Model.ImageURL">
                </div>

                <div class="mb-3 col-md-4">
                    <div>
                        <h5>FullName</h5>
                        <p>@Model.FullName</p>
                    </div>

                    <br />
                    <div>
                        <h5>Email</h5>
                        <p><a href="mailto:@Model.Email">@Model.Email</a></p>
                    </div>

                    <br />
                    <div>
                        <h5>Phone</h5>
                        <p>@Model.Phone</p>
                    </div>

                    <br />
                    <div class="mt-3">
                        <h5>Department</h5>
                        <p>@Model.Department.Title</p>
                    </div>

                    <br />
                    <div class="mt-3">
                        <h5>Profession</h5>
                        <p>@Model.Profession.Name</p>
                    </div>
                </div>

                <div class="mb-3 col-md-4">

                    <br />
                    <div>
                        <h5>Facebook</h5>
                        <p><a href="@Model.FacebookURL">@Model.FacebookURL</a></p>
                    </div>

                    <br />
                    <div>
                        <h5>Instagram</h5>
                        <p><a href="@Model.InstagramURL">@Model.InstagramURL</a></p>
                    </div>

                    <br />
                    <div>
                        <h5>Twitter</h5>
                        <p><a href="@Model.TwitterURL">@Model.TwitterURL</a></p>
                    </div>

                    <br />
                    <div>
                        <h5>LinekedIn</h5>
                        <p><a href="@Model.LinekedInURL">@Model.LinekedInURL</a></p>
                    </div>
                </div>
            </div>
            <br />
            <h4>About:</h4>

            <div class="row">
                <div class="mb-3 col-md-3">

                    <h5>Certification</h5>
                    @for (int i = 0; i < Model.Certifications.Count(); i++)
                    {
                        if (Model.Certifications[i].Text != "-")
                        {
                            <div>
                                <p><i b-9h7ph8a8rf="" class="bi bi-caret-right-fill"></i>  @Model.Certifications[i].Text</p>
                            </div>
                        }
                    }
                </div>

                <div class="mb-3 col-md-3">

                    <h5 class="form-h5">Training</h5>
                    @for (int i = 0; i < Model.Training.Count(); i++)
                    {
                        if (Model.Training[i].Text != "-")
                        {
                            <div>
                                <p><i b-9h7ph8a8rf="" class="bi bi-caret-right-fill"></i>  @Model.Training[i].Text</p>
                            </div>
                        }
                    }
                </div>

                <div class="mb-3 col-md-3">

                    <h5>Specialization</h5>
                    @for (int i = 0; i < Model.Specializations.Count(); i++)
                    {
                        if (Model.Specializations[i].Text != "-")
                        {
                            <div>
                                <p><i b-9h7ph8a8rf="" class="bi bi-caret-right-fill"></i>  @Model.Specializations[i].Text</p>
                            </div>
                        }
                    }
                </div>

                <div class="mb-3 col-md-3">

                    <h5>Education</h5>
                    @for (int i = 0; i < Model.Educations.Count(); i++)
                    {
                        if (Model.Educations[i].Text != "-")
                        {
                            <div>
                                <p><i b-9h7ph8a8rf="" class="bi bi-caret-right-fill"></i>  @Model.Educations[i].Text</p>
                            </div>
                        }
                    }
                </div>
            </div>

        </div>
        <a asp-controller="doctor" asp-action="index" class="btn btn-outline-danger">Cancel</a>
    </div>
</div>