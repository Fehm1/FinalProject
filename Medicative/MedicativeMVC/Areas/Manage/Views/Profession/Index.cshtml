@model ProfessionListDto
@{
    int count = 0;
}

<div>
    <div class="row align-items-center">
        <div class="col-10" style="justify-content: start">
            <h1>Profession:</h1>
        </div>
        <div class="col-2" style="justify-content: end">
            <a class="btn btn-primary" asp-controller="Profession" asp-action="create">Add <i class="bi bi-plus-circle"></i></a>
            <a class="btn btn-outline-danger" asp-controller="Profession" asp-action="deletedTable">Deleted <i class="bi bi-trash-fill"></i></a>
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Image</th>
                    <th scope="col">FullName</th>
                    <th scope="col">Position</th>
                </tr>
            </thead>
            <tbody>

                @foreach (ProfessionGetDto profession in Model.Professions)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>

                        <td>@profession.Name</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="profession" asp-action="update" asp-route-id="@profession.Id"><i class="bi bi-pen-fill"></i></a>
                            <a class="btn btn-danger" asp-controller="profession" asp-action="delete" asp-route-id="@profession.Id"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>